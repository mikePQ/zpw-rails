<p id="message"><%= flash[:message] %></p>
<h6>
  <strong>Artysta:</strong>
  <%= @event.artist %>
</h6>

<h6>
  <strong>Opis:</strong>
  <%= @event.description %>
</h6>

<h6>
  <strong>Cena minimalna:</strong>
  <%= @event.price_low %>
</h6>

<h6>
  <strong>Cena maksymalna:</strong>
  <%= @event.price_high %>
</h6>

<h6>
  <strong>Data:</strong>
  <%= @event.event_date %>
</h6>

<div class="top-mg-50">
  <% width = 100 / @event.seats_columns %>
  <% for i in 1..@event.seats_rows do %>
    <div class="row">
      <% for j in 1..@event.seats_columns do %>
        <% seat = @event.get_seat(i, j) %>
        <button
        class="btn
          <%= @event.is_available(seat) ? 'btn-danger' : 'btn-success' %>"
        style="padding: 15px 0; width : <%= width  %>%;
            <% if j < @event.seats_columns %>
            border-right: 1px solid #fff;
            <% end %>
            <% if i < @event.seats_rows %>
            border-bottom: 1px solid #fff;
          <% end %>">

          <% if @event.is_available(seat) %>
            <%= seat %>
          <% else %>
            <%= link_to seat, new_ticket_path(:seat_id_seq => seat, :event_id => @event.id), class: "btn text-white w-100" %>
          <% end %>
        </button>
      <% end %>
    </div>
  <% end %>
</div>

<% if current_user&.admin %>
  <div class="top-mg-50">
    <%= render "tickets/tickets_list", tickets: @event.tickets %>
  </div>
<% end %>

